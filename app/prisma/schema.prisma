// Receipts - Hot Takes Accountability
// Prisma schema for Vercel Postgres (Neon)

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// A hot take that gets locked and verified
model Take {
  id          String    @id @default(cuid())
  text        String    @db.VarChar(280)
  author      String    @default("Anonymous")
  hash        String?   // SHA-256 hash for integrity verification

  // AI verification fields
  aiVerified      Boolean   @default(false)
  aiSubject       String?   // e.g., "Houston Rockets"
  aiPrediction    String?   // e.g., "will make the playoffs"
  aiTimeframe     String?   // e.g., "2025-26 NBA season"
  aiResolutionCriteria String? // e.g., "Team finishes in top 10 of Western Conference"

  // Timestamps
  createdAt   DateTime  @default(now())
  lockedAt    DateTime  @default(now())
  resolvesAt  DateTime?
  resolvedAt  DateTime?

  // Status: pending | verified | wrong
  status      TakeStatus @default(PENDING)

  // Clerk user relation
  clerkUserId String?
  user        User?     @relation(fields: [clerkUserId], references: [clerkId])
  
  // Agreements
  agreements  Agreement[]

  @@index([status])
  @@index([createdAt])
  @@index([clerkUserId])
}

model User {
  id        String   @id @default(cuid())
  clerkId   String   @unique // Clerk user ID
  username  String   // Display name from Clerk profile
  email     String?  @unique
  imageUrl  String?  // Profile image from Clerk

  // Twitter OAuth tokens
  twitterId           String?  @unique
  twitterUsername     String?
  twitterAccessToken  String?
  twitterAccessSecret String?

  // Record tracking
  wins      Int      @default(0)
  losses    Int      @default(0)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  takes       Take[]
  agreements  Agreement[]
}

// User agreement on a take (agree/disagree)
model Agreement {
  id        String   @id @default(cuid())
  takeId    String
  userId    String
  position  Position
  createdAt DateTime @default(now())

  take      Take     @relation(fields: [takeId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([takeId, userId]) // One position per user per take
  @@index([takeId])
  @@index([userId])
}

enum Position {
  AGREE
  DISAGREE
}

enum TakeStatus {
  PENDING
  VERIFIED
  WRONG
}
